{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "cwd": "${workspaceFolder}",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": [
                // "--verbose",
                "--source",
                "/go/src/rotating-rsync-backup/dev-source",
                "--profile-name",
                "foo",
                "--target",
                "/target",
                "--target-host",
                "dev-target",
                "--target-user",
                "rrb",
                "--target-port",
                "2222",
                "--ssh-options",
                "-o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no -i dev-target-ssh/keys/id_ed25519",
                "--rsync-options",
                "-v",
                "--max-main",
                "2",
                "--max-daily",
                "2",
                "--max-weekly",
                "2",
                "--max-monthly",
                "2",
                "--report-recipient",
                "foo@bar.de",
                "--report-from",
                "rrb@bar.de",
                "--report-smtp-host",
                "maildev",
                "--report-smtp-port",
                "25",
                "--report-smtp-username",
                "user",
                "--report-smtp-password",
                "password",
                "--report-smtp-insecure",
                "true"
            ]
        }
    ]
}
